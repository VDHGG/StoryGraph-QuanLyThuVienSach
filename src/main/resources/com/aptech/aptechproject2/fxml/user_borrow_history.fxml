<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>


<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f9fa;"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aptech.aptechproject2.Controller.UserBorrowHistoryController">

    <Label text="LỊCH SỬ MƯỢN SÁCH" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <TableView fx:id="borrowTable" prefHeight="600" prefWidth="900">
        <columns>

            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colBook" text="Tên sách" prefWidth="250"/>
            <TableColumn fx:id="colBorrowDate" text="Ngày mượn" prefWidth="140"/>
            <TableColumn fx:id="colReturnDate" text="Hạn trả" prefWidth="140"/>
            <TableColumn fx:id="actionColumn" text="Hành động" prefWidth="150"/>

        </columns>
    </TableView>

    <Label fx:id="emptyLabel" text="Chưa có đơn mượn nào." visible="false"
           style="-fx-font-size: 18px; -fx-text-fill: #95a5a6;" />
</VBox>