<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aptech.aptechproject2.Controller.AuthorDetailController">

    <HBox spacing="20">
        <VBox spacing="10" prefWidth="300">
            <Label fx:id="nameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label fx:id="descLabel" wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #636e72;" />
        </VBox>

        <ImageView fx:id="imageView" fitWidth="200" fitHeight="200" preserveRatio="true" style="-fx-border-color: #e0e0e0; -fx-border-radius: 8;" />
    </HBox>

    <VBox spacing="10">
        <Label text="Sách Của Tác Giả" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <StackPane prefHeight="300">
            <HBox fx:id="booksCarousel" alignment="CENTER" spacing="20" />
            <Button onAction="#prevBook" text="◀" styleClass="carousel-btn" StackPane.alignment="CENTER_LEFT" />
            <Button onAction="#nextBook" text="▶" styleClass="carousel-btn" StackPane.alignment="CENTER_RIGHT" />
            <Label fx:id="pageLabel" text="1 / 1" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" StackPane.alignment="BOTTOM_CENTER" />
        </StackPane>
    </VBox>

</VBox>