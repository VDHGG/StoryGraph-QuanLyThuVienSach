<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f9fa;"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aptech.aptechproject2.Controller.UserAllBooksController">

    <Label text="TẤT CẢ SÁCH" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Search & Filters -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Tìm theo tựa đề..." prefWidth="300"
                   style="-fx-background-radius: 50; -fx-padding: 15 20;" />
        <Button fx:id="btnSearch" text="TÌM KIẾM" onAction="#onSearch"
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 50;" />
    </HBox>

    <!-- Authors -->
    <VBox spacing="5">
        <Label text="Tác Giả:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <HBox spacing="10" alignment="CENTER_LEFT">

            <ComboBox fx:id="authorCombo" promptText="Chọn Tác Giả" prefWidth="200" />

            <!-- ScrollPane rộng + cao + cùng hàng -->
            <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"
                        fitToHeight="true" fitToWidth="true"
                        prefWidth="800" minHeight="45"
                        style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
                <content>
                    <HBox fx:id="selectedAuthorsBox" spacing="5" />
                </content>
            </ScrollPane>

        </HBox>
    </VBox>

    <!-- Categories -->
    <VBox spacing="5">
        <Label text="Thể Loại:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <ComboBox fx:id="categoryCombo" promptText="Chọn Thể Loại" prefWidth="200" />

            <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"
                        fitToHeight="true" fitToWidth="true"
                        prefWidth="800" minHeight="45"
                        style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
                <content>
                    <HBox fx:id="selectedCategoriesBox" spacing="5" />
                </content>
            </ScrollPane>

        </HBox>
    </VBox>

    <!-- Grid for Book Cards -->
    <GridPane fx:id="booksGrid" hgap="20" vgap="20" alignment="CENTER" />

    <!-- Pagination -->
    <Pagination fx:id="pagination" style="-fx-padding: 20 0;" />

</VBox>
