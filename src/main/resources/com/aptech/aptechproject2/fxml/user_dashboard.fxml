<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" style="-fx-background: #f8f9fa;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.aptech.aptechproject2.Controller.UserDashboardController">

    <VBox spacing="0">

        <!-- Navigation gộp trực tiếp (không cần file riêng) -->
        <HBox fx:id="navigation" alignment="CENTER_LEFT" spacing="40" style="-fx-background-color: white; -fx-padding: 16 110; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="THƯ VIỆN SÁCH TRỰC TUYẾN" />
            <Region HBox.hgrow="ALWAYS" />
            <Hyperlink fx:id="navHome" text="TRANG CHỦ" styleClass="nav-link" />
            <Hyperlink fx:id="navAllBooks" text="TẤT CẢ SÁCH" styleClass="nav-link" />
            <Hyperlink fx:id="navCategories" text="THỂ LOẠI" styleClass="nav-link" />
            <Hyperlink fx:id="navAuthors" text="TÁC GIẢ" styleClass="nav-link" />
            <Hyperlink fx:id="navMyShelf" text="KỆ SÁCH CỦA TÔI" styleClass="nav-link" />
            <Hyperlink fx:id="navBorrowHistory" text="LỊCH SỬ MƯỢN" styleClass="nav-link" />
            <Hyperlink fx:id="navProfile" text="THÔNG TIN CÁ NHÂN" styleClass="nav-link" />
            <Button fx:id="btnLogout" text="ĐĂNG XUẤT"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 28; -fx-background-radius: 30;" />
        </HBox>

        <!-- Khu vực thay đổi nội dung -->
        <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS" style="-fx-background-color: #f8f9fa;">
            <!-- Nội dung mặc định sẽ được load ở đây -->
        </StackPane>

        <!-- Footer -->
        <HBox alignment="CENTER" spacing="30" style="-fx-background-color: #2c3e50; -fx-padding: 40 110;">
            <Label text="© 2025 Thư viện sách trực tuyến - Mang tri thức đến mọi nhà"
                   style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Liên hệ: contact@thuvien.com | Hotline: 1900 1234"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" />
        </HBox>

    </VBox>
</ScrollPane>