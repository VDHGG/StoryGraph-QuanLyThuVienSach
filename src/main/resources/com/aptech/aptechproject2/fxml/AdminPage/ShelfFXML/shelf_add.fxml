<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aptech.aptechproject2.Controller.ShelfController.AddShelfController"
      spacing="15" prefWidth="400" style="-fx-padding: 20;">
    <Label text="TẠO KỆ MỚI" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <Label text="Tên kệ:"/>
    <TextField fx:id="nameField" promptText="VD: Đang đọc, Yêu thích..."/>
    <Label text="Mô tả (tùy chọn):"/>
    <TextArea fx:id="descArea" promptText="Mô tả về kệ sách..." prefRowCount="3"/>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Tạo" onAction="#onAdd" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Hủy" onAction="#onCancel"/>
    </HBox>
</VBox>