<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aptech.aptechproject2.Controller.ReviewController.AddReviewController"
      spacing="15" prefWidth="400" style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8;">

    <Label text="THÊM ĐÁNH GIÁ MỚI" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator />

    <Label text="Người dùng:"/>
    <ComboBox fx:id="userCombo" promptText="Chọn người dùng" prefWidth="350"/>

    <Label text="Sách:"/>
    <ComboBox fx:id="bookCombo" promptText="Chọn sách" prefWidth="350"/>

    <Label text="Đánh giá (1-5 sao):"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Slider fx:id="ratingSlider" min="1" max="5" value="3" showTickLabels="true" showTickMarks="true" majorTickUnit="1" minorTickCount="0"/>
        <Label fx:id="ratingLabel" text="★★★☆☆" style="-fx-font-size: 16;"/>
    </HBox>

    <Label text="Bình luận:"/>
    <TextArea fx:id="commentArea" promptText="Nhập nội dung đánh giá..." wrapText="true" prefRowCount="4"/>

    <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 12;"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Thêm" onAction="#onAdd"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Hủy" onAction="#onCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>
</VBox>