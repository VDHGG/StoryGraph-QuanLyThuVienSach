<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aptech.aptechproject2.Controller.BorrwController.EditBorrowController"
      spacing="10" prefWidth="400" style="-fx-padding: 20; -fx-background-color: white;">

    <Label text="Sửa Phiếu Mượn" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <Label text="Người mượn:"/>
    <TextField fx:id="userField" editable="false"/>

    <Label text="Sách:"/>
    <TextField fx:id="bookField" editable="false"/>

    <Label text="Hạn trả (ngày):"/>
    <TextField fx:id="expireField" promptText="YYYY-MM-DD"/>

    <Label fx:id="errorLabel" textFill="red"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cập Nhật" onAction="#onUpdate"/>
        <Button text="Hủy" onAction="#onCancel"/>
    </HBox>
</VBox>