<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aptech.aptechproject2.Controller.AddReviewController"
      spacing="20" prefWidth="450" style="-fx-padding: 25; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 5);">

    <Label text="ĐÁNH GIÁ SÁCH" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-alignment: center;" />

    <VBox spacing="5">
        <Label text="Số sao:" style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Slider fx:id="ratingSlider" min="1" max="5" value="3" showTickLabels="true" showTickMarks="true" majorTickUnit="1" minorTickCount="0" snapToTicks="true" style="-fx-pref-width: 250;" />
            <Label fx:id="ratingLabel" text="★★★☆☆" style="-fx-font-size: 24px; -fx-text-fill: #ffd700;" />
        </HBox>
    </VBox>

    <VBox spacing="5">
        <Label text="Bình luận:" style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
        <TextArea fx:id="commentArea" promptText="Viết đánh giá của bạn..." wrapText="true" prefRowCount="5" style="-fx-pref-width: 400; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0;" />
    </VBox>

    <Label fx:id="errorLabel" text="" textFill="#ff0000" style="-fx-font-size: 12px;" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Gửi đánh giá" onAction="#onSubmit" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;" />
        <Button text="Hủy" onAction="#onCancel" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;" />
    </HBox>

</VBox>